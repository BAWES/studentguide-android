<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_filter">

    <android.support.v7.widget.Toolbar
        android:id="@+id/AC_TB_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_toolbar">

        <com.techno.studentguide.customview.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/_35sdp"
            android:text="@string/txt_title_contact_us"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/social_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AC_TB_details_toolbar"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IV_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ct_twitter" />

        <ImageView
            android:id="@+id/IV_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ct_instgram" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/social_media"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/ic_search">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_line" />

            <com.techno.studentguide.customview.CustomEditText
                android:id="@+id/ACU_CET_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:hint="@string/txt_name"
                android:scaleType="fitXY"
                android:singleLine="true"
                android:textColor="@color/clr_white"
                android:textColorHint="@color/clr_white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_search"
            android:scaleType="fitXY">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_line" />

            <com.techno.studentguide.customview.CustomEditText
                android:id="@+id/ACU_CET_contact_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@null"
                android:hint="@string/txt_contact_no"
                android:maxLength="13"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/clr_white"
                android:textColorHint="@color/clr_white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_editext_rectangle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:src="@drawable/ic_line" />

            <com.techno.studentguide.customview.CustomEditText
                android:id="@+id/ACU_CET_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/txt_message"
                android:minLines="3"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/clr_white"
                android:textColorHint="@color/clr_white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <com.techno.studentguide.customview.CustomButton
            android:id="@+id/ACU_CBTN_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_submit_normal"
            android:ems="7"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/txt_submit"
            android:textAllCaps="false"
            android:textColor="@color/clr_white" />

    </LinearLayout>

    <include
        layout="@layout/layout_footer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>

</RelativeLayout>
